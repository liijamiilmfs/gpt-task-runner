{
  "name": "gpt-task-runner",
  "version": "1.0.0",
  "description": "A task runner for executing GPT-based tasks with batch processing and monitoring",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:dashboard": "cd dashboard && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:integration": "vitest --config vitest.config.integration.ts",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "coverage:check": "vitest --coverage --reporter=verbose",
    "coverage:report": "vitest --coverage --reporter=html",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf .next dist coverage",
    "security:audit": "npm audit --audit-level moderate",
    "security:audit-fix": "node scripts/safe-update.js audit",
    "security:audit-fix-force": "node scripts/safe-update.js audit-force",
    "deps:update": "node scripts/safe-update.js update",
    "security:scan": "snyk test",
    "service:install": "node scripts/install-service.js",
    "service:uninstall": "node scripts/uninstall-service.js",
    "test:dry-run": "node scripts/test-dry-run.js"
  },
  "keywords": [
    "gpt",
    "task-runner",
    "batch-processing",
    "automation",
    "ai",
    "openai",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/node-windows": "^0.1.6",
    "@types/ws": "^8.18.1",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.544.0",
    "next": "^15.1.0",
    "node-cron": "^4.2.1",
    "node-windows": "^1.0.0-beta.8",
    "openai": "^5.23.0",
    "pino": "^9.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.4",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "snyk": "^1.1248.0",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "overrides": {
    "inflight": "npm:lru-cache@^10.0.0",
    "glob": "^10.0.0"
  }
}
