# GPT Task Runner Environment Configuration
# Copy this file to .env and update the values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_PATH=./data/tasks.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000

# Dashboard Authentication
DASHBOARD_API_KEY=your_secure_api_key_here
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here

# TLS/SSL Configuration (TLS 1.3)
SSL_KEY_PATH=/path/to/private-key.pem
SSL_CERT_PATH=/path/to/certificate.pem
SSL_CA_PATH=/path/to/ca-certificate.pem
HTTPS_PORT=3443

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/task-runner.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Task Processing Configuration
BATCH_SIZE=10
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Service Configuration (Windows)
SERVICE_NAME=GPTTaskRunner
SERVICE_DISPLAY_NAME=GPT Task Runner
SERVICE_DESCRIPTION=Automated GPT task processing service
SERVICE_USER=SYSTEM
SERVICE_PASSWORD=

# Development Configuration
DEBUG=false
VERBOSE_LOGGING=false
MOCK_OPENAI=false
DRY_RUN_MODE=false
